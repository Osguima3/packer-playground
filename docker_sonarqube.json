{
  "variables": {
      "vpc_id": "",
      "subnet_id": ""
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "profile": "dev-gha",
      "region": "eu-central-1",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "ubuntu/images/*ubuntu-bionic-18.04-amd64-server-*",
          "root-device-type": "ebs"
        },
        "owners": ["099720109477"],
        "most_recent": true
      },
      "instance_type": "t3.large",
      "ssh_username": "ubuntu",
      "ami_name": "docker-sonarqube-{{timestamp}}",
      "associate_public_ip_address": true,
      "vpc_id": "{{user `vpc_id`}}",
      "subnet_id": "{{user `subnet_id`}}",
      "tags": [{
              "Name": "SonarQube {{timestamp}}"
        }
      ]
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "files/",
      "destination": "/tmp/"
    },
    {
      "type": "shell",
      "script": "scripts/bootstrap_docker.sh"
    },
    {
      "type": "shell",
      "script": "scripts/cleanup.sh"
    }
  ]
}